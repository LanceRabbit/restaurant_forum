<!-- restaurants list，有多寫restaurant-item的class style -->
<% @restaurants.each do |restaurant| %>
  <div class="col-xs-12 col-sm-6 col-md-4">
    <div class="restaurant-item">
      <%= image_tag restaurant.image, class: "img-responsive center-block" if restaurant.image?%>
      <%= image_tag "http://via.placeholder.com/350x180", class: "img-responsive center-block img-rounded"  unless restaurant.image?%> 
      <div class="caption">
        <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
        <%= simple_format restaurant.category.name, class: "label label-default" %>
        <p class="description"><%= truncate(restaurant.description, length: 80) %></p>
        <%= render partial: "shared/favorite", locals: {restaurant: restaurant} %>
      </div>
    </div>
  </div>
<% end %>

